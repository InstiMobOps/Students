<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#33220f8e">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:chip="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:elevation="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/feedback_layout"
                    android:weightSum="1">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="news_title"
                            android:id="@+id/feedback_title"
                            android:textSize="19dp"
                            android:layout_marginLeft="9dp"
                            android:layout_marginStart="9dp"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/user"
                            android:layout_toEndOf="@+id/user" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/feedback_time"
                            android:textSize="10dp"
                            android:textColor="@color/colorAccent"
                            android:layout_below="@+id/feedback_title"
                            android:layout_alignLeft="@+id/feedback_title"
                            android:layout_alignStart="@+id/feedback_title" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Medium Text"
                            android:id="@+id/feedback_summary"
                            android:textSize="14dp"
                            android:layout_below="@+id/feedback_user"
                            android:layout_alignLeft="@+id/user"
                            android:layout_alignStart="@+id/user"
                            android:autoLink="web"
                            />

                        <com.plumillonforge.android.chipview.ChipView
                            android:id="@+id/chipview"
                            chip:chip_background="@color/colorAccent"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/feedback_summary"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="21dp"
                            android:layout_marginEnd="21dp"
                            android:paddingTop="10dp"/>

                        <LinearLayout
                            android:id="@+id/feedback_andry"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/chipview"
                            android:layout_gravity="bottom">

                            <ImageView
                                android:layout_width="@dimen/angwidth"
                                android:layout_height="@dimen/angwidth"
                                android:id="@+id/ang1"
                                android:layout_marginRight="1dp"/>
                            <ImageView
                                android:layout_width="@dimen/angwidth"
                                android:layout_height="@dimen/angwidth"
                                android:id="@+id/ang2"
                                android:layout_marginRight="1dp"/>
                            <ImageView
                                android:layout_width="@dimen/angwidth"
                                android:layout_height="@dimen/angwidth"
                                android:layout_marginRight="1dp"
                                android:id="@+id/ang3"/>
                            <ImageView
                                android:layout_width="@dimen/angwidth"
                                android:layout_height="@dimen/angwidth"
                                android:layout_marginRight="1dp"
                                android:id="@+id/ang4"/>
                            <ImageView
                                android:layout_width="@dimen/angwidth"
                                android:layout_height="@dimen/angwidth"
                                android:layout_marginRight="1dp"
                                android:id="@+id/ang5"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:id="@+id/user"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/anonymous" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/feedback_user"
                            android:visibility="visible"
                            android:layout_below="@+id/feedback_time"
                            android:layout_alignLeft="@+id/feedback_time"
                            android:layout_alignStart="@+id/feedback_time"
                            android:textColor="@color/colorAccent"
                            android:textSize="12dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/feedback_andry"
                        android:layout_alignRight="@+id/chipview"
                        android:layout_alignEnd="@+id/chipview"
                        android:background="#4e0f8e82">
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/comment_recycler">

                        </android.support.v7.widget.RecyclerView>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/linearLayout3"
                            android:layout_below="@+id/comment_recycler"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2px"
                                android:background="#ffff"/>
                            <android.support.v7.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_toStartOf="@+id/fab_post_commnt"
                                android:layout_toLeftOf="@+id/fab_post_commnt"
                                android:layout_alignTop="@+id/fab_post_commnt"
                                android:id="@+id/edit_comment"
                                android:layout_alignBottom="@+id/fab_post_commnt"
                                android:paddingLeft="8dp" />
                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:elevation="2dp"
                                android:layout_margin="4dp"
                                android:src="@drawable/ic_insert_comment_white_24dp"
                                android:layout_gravity="bottom"
                                android:id="@+id/fab_post_commnt"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
