<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:elevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="100">
        <in.ac.iitm.students.Views.CircleImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/user"
            android:id="@+id/gameradar_admin_dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="100"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Football"
                android:id="@+id/gameradar_game" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="location"
                android:id="@+id/gameradar_location"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="time"
                android:id="@+id/gameradar_time" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <in.ac.iitm.students.Views.CircleImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_add_white_24dp"
                android:layout_marginTop="27dp"
                android:id="@+id/gameradar_button_add"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5/10"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="1dp"
        android:elevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gameradar_players_container"></LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>